{
  "env" : {
    "browser" : true,
    "es6" : true
  },
  "extends" : [
    "eslint:recommended",
    "dafi/legacy/javascript",
    "dafi/legacy/stylistic",
    "dafi/legacy/typescript",
    "dafi/legacy/reactjs"
  ],
  "parserOptions" : {
    "project" : [
      "tsconfig.json"
    ],
    "ecmaFeatures" : {
      "jsx" : true
    },
    "ecmaVersion" : 2018,
    "sourceType" : "module"
  },
  "plugins" : [
    "eslint-plugin-react-compiler"
  ],
  "rules" : {
    "react-compiler/react-compiler": "error"
  },
  "settings" : {
    "react" : {
      "version" : "detect"
    }
  }
}
